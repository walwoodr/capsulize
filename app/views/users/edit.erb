<h2>Modify your account</h2>

<form action="/<%= current_user.username %>" method="post">
  <input type="hidden" name="_method" value="patch" id="hidden">
  <label for="name">Name</label><br>
  <input type="text" name="user[name]" value="<%= current_user.name %>"><br></br>
  <label for="username">Username</label><br>
  <input type="text" name="user[username]" value="<%= current_user.username %>"><br></br>
  <label for="password">Reset Password</label><br>
  <input type="password" name="user[password]"><br></br>
  <input type="submit" value="Modify Account">
</form>
