<h1>Your clothes</h1>

<a href="/clothes/new">Create new Clothing item</a><br>
<a href="/clothes/select">Select an existing clothing item</a>

<% @user.clothing_items.each do |clothing_item| %>

<div class="clothing_item">
<h2><%= clothing_item.name %></h2>
<table>
  <td><%= clothing_item.color %></td>
  <td><%= clothing_item.fanciness %></td>
  <td><%= clothing_item.clothing_category.name if clothing_item.clothing_category %></td>
</table>
<a href="/clothes/<%= clothing_item.id %>/edit">Edit</a> <a href="/clothes/<%= clothing_item.id %>/remove">Remove</a>
</div>

<% end %>
